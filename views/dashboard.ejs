<html>

<head>
  <title>Online Voting Platform</title>
  <meta name="csrf-token" content="<%= csrf %>" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/6353074471.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script>
    // function to delete election
    function deleteElection(id) {
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

      fetch(`/election/${id}`, {
        method: "DELETE",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ _csrf: token }),
      }).then((res) => {
        if (res.ok) {
          window.location.reload();
        }
      })
        .catch((err) => console.log(err));
    }
  </script>
</head>

<body style="background-color: #96e8fb;">
  <div class="flex">
    <%- include ('updatedHeader', {username: username}) %>
  </div>
  <div class="flex p-4" style="justify-content:space-between;">
    <div class="flex flex-col" style="width: 60%;">
      <div class="pt-6 flex justify-between" style="width:60% ;">
        <p class="font-bold text-4xl">Your Elections</p>
      </div>
      <!-- List of Elections -->
      <div>
        <div class="flex flex-col justify-center items-center p-4" style="width: 40%;">
          <div class="flex flex-col gap-3 justify-center w-full p-4">
            <% if (elections.length===0) { %>
              <h1 class="text-2xl flex justify-center text-gray-600">No elections created yet</h1>
              <% } %>
                <% for (var i=0; i<elections.length; i++) { %>
                  <div class="flex justify-between gap-4 px-4 py-2" style="border-radius: 9px;background-color: white;">
                    <li class="text-2xl"><a style="text-decoration:underline ;" href="/election/<%= elections[i].id %>">
                        <%= elections[i].name %>
                      </a></li>
                    <div class="flex gap-4 justify-center items-center text-xl">
                      <div onclick="deleteElection('<%= elections[i].id %>')"><i
                          class="cursor-pointer fa fa-trash hover:text-red-500 transition duration-200"></i></div>
                    </div>
                  </div>
                  <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-6 flex justify-between" style="margin: 5rem 2rem;height: 70%;padding: 2rem 3rem;border: 2px solid #046277;border-radius: 9px;">
      <div class="flex justify-center">
        <form action="/election" method="post" class="pt-8 flex flex-col gap-4 justify-center items-center">
          <input type="hidden" name="_csrf" value="<%= csrf%>">
          <div class="flex flex-col w-full">
            <label for="name" style="font-size: 2rem;font-weight: bolder;margin-bottom: 3rem;">Create Your New Election!</label>
            <input type="text" name="name" placeholder="Election Name" class="border-2 border-black p-2 rounded-lg" />
          </div>
          <button type="submit" class="bg-cyan-200 hover:bg-cyan-400 font-bold border-2 border-cyan-800 text-black p-2 rounded-lg flex justify-center px-6">
            + Add Election
          </button>
        </form>
      </div>
    </div>
  </div>
</body>

</html>